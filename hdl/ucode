########## INDEX ADDR ##################
PARSE_IDX:          OPD
                    IDX_JMP
                    # IDX_IND either jumps to IDX_IND or
                    # does a IDX_RET depending on the indirect bit
IDX_R:              NOP
                    IDX_IND
IDX_RINC:           IDX_POST=1                  # 0 - R+
                    IDX_IND
IDX_RINC2:          IDX_POST=1, IDXW=1          # 1 - R++ / [R++]
                    IDX_IND
IDX_RDEC:           IDX_PRE
                    IDX_IND                     # 2 -  -R
IDX_RDEC2:          IDXW=1
                    IDX_PRE
                    IDX_IND                     # 3 - --R
IDX_OFFSET8:        OPD                         # 4 -  8-bit offset
                    IDX_8, IDX_IND
IDX_OFFSET16:       OPD, MEMHI                  # 5 - 16-bit offset
                    OPD
                    IDX_16, IDX_IND
IDX_IND:            IDX_EN, MEMHI              # 6 - ,R
                    IDX_EN, IDX_ADV
                    DATA2ADDR, IDX_RET
IDX_EXT:            OPD, MEMHI                  # 7 Extended
                    OPD
                    DATA2ADDR, IDX_IND
IDX_DP:             OPD                         # 1,4  - DP
                    IDX_DP, IDX_IND
IDX_ACC:            NOP
                    IDX_ACC=1, IDX_IND            # 1,other  - A, B or D


########## ALU OPERATIONS ##################
SINGLE_ALU:         OPD
                    UP_CC, UP_LD8
                    NI

CMP8:               OPD
                    UP_CC
                    NI

CMP8_IDX:           IDX_EN
                    UP_CC
                    NI

SINGLE_ALU_16:      OPD, MEMHI
                    OPD
                    UP_CC, UP_LD16
                    NI

SINGLE_ALUD:        OPD, MEMHI
                    OPD
                    UP_CC, UP_AB
                    NI

SINGLE_ALUD_IDX:    IDX_EN, MEMHI
                    IDX_EN, IDX_ADV
                    UP_CC, UP_AB
                    NI

CMP16:              OPD, MEMHI
                    OPD
                    UP_CC
                    NI

CMP16_IDX:          IDX_EN, MEMHI
                    IDX_EN, IDX_ADV
                    UP_CC
                    NI

SINGLE_A_INH:       UP_CC, UP_LDA
                    NI

SINGLE_B_INH:       UP_CC, UP_LDB
                    NI

SINGLE_ALU_INH16:   UP_CC, UP_AB
                    NI

SINGLE_ABX:         UP_ABX
                    NI

SINGLE_ALU_IDX:     IDX_EN
                    UP_CC, UP_LD8
                    NI

SINGLE_ALU_IDX16:   IDX_EN, MEMHI
                    IDX_EN, IDX_ADV
                    UP_CC, UP_LD16
                    NI

SHIFTD:             OPD
                    SHD_EN
                    NOP
                    UP_CC, UP_AB
                    NI

SHIFTD_IDX:         IDX_EN
                    SHD_EN
                    NOP
                    UP_CC, UP_AB
                    NI

MEM_ALU_IDX:        IDX_EN
                    OPN0=MEM, UP_CC, IDX_EN, WE
                    NI

DIVIDE:             DIV_EN
                    NOP
                    NOP
                    UP_CC, UP_DIV
                    NI

WMEM_ALU:           IDX_EN, MEMHI
                    IDX_EN, IDX_ADV
                    OPN0=MEM,        IDX_EN, WE, MEMHI
                    OPN0=MEM, UP_CC, IDX_EN, WE, IDX_ADV
                    NI

MULTIPLY:           NOP             # 11 cycles in 6809 (8 here)
                    NOP
                    NOP
                    NOP             # 6th clock tick
                    UP_CC, UP_AB
                    NI
                    NOP             # Leave this NOP

LMULTIPLY:          NOP             # 20+ cycles in original
                    NOP
                    NOP
                    NOP             # 6th clock tick
                    UP_CC, UP_LMUL  # Result goes to {X,Y}
                    NI
                    NOP             # Leave this NOP

######### DECREMENT AND LOOP ##############
LOOPX:              OPD,
                    DECX, UP_CC     # DECX selects OPN0=X too
                    BRANCH_BNZ,
                    NI

LOOPB:              OPD
                    OPN0=B, DECB, UP_CC
                    BRANCH_BNZ,
                    NI

######### STRING OPERATIONS ##############
MOVE:               ADDRY
                    WE,  ADDRX, UP_MOVE     # Y+, X+, U-
                    NI

BMOVE:              NIUZ
                    NOP
                    ADDRY
                    WE, ADDRX, UP_MOVE             # Y+, X+, U-
                    UC_LOOP

BSETA:              NIUZ
                    NOP
                    ADDRX, WE, INCX, DECU
                    UC_LOOP

BSETD:              NIUZ
                    NOP
                    WE, ADDRX, INCX, DECU
                    WE, ADDRX, INCX
                    UC_LOOP

############### LOAD/STORE OPERATIONS ############
STORE8:             IDX_EN, WE,
                    NI

STORE16:            IDX_EN, WE, MEMHI
                    IDX_EN, WE, IDX_ADV
                    NI

LEA:                UP_LEA, UP_CC
                    NI

############### MISC OPERATIONS ##################
SETLNS:             OPD
                    UP_LINES, NI

SETLNS_IDX:         IDX_EN
                    UP_LINES, NI

EXCHANGE:           OPD
                    UP_EXG
                    NI

TRANSFER:           OPD
                    UP_TFR
                    NI

NOPE:               NI

############### FLOW CONTROL #####################
SBRANCH:            OPD
                    PC=BRANCH8
                    NI

SBSR:               OPD
                    PSH_PC, PSH_GO
                    NOP
                    PC=BRANCH8
                    NI

BSRL:               OPD, MEMHI
                    OPD
                    PSH_PC, PSH_GO
                    NOP
                    PC=BRANCH16
                    NI

LBRANCH:            OPD, MEMHI
                    OPD
                    PC=BRANCH16
                    NI

JUMP:               PC_JMP
                    NI

JMSR:               PSH_PC, PSH_GO
                    NOP
                    PC_JMP
                    NI

RTIT:               RTI_CC, PUL_GO
                    NOP
                    RTI_OTHER, PUL_GO
                    NOP
                    NI

RTSR:               PSH_PC, PUL_GO
                    NOP
                    NOP
                    NI

############### STACK ##################
PSH:                OPD
                    PSH_GO
                    NOP
                    NOP
                    NI

PUL:                OPD
                    PUL_GO
                    NOP
                    NOP
                    NI

########### INTERRUPTS ####################
RESET:              INT_EN, I=1, F=1
                    NOP
                    NOP
                    NOP
                    NI
                    NOP

# Do not make FIRQ, IRQ or NMI ucode longer than 6 instructions
# or it will fail
FIRQ:               PSH_CC, PSH_GO
                    F=1, I=1
                    NOP
                    INT_EN, E=0, F=1, I=1
                    NOP
                    NI

IRQ:                PSH_ALL, PSH_GO
                    I=1
                    NOP
                    INT_EN, E=1, I=1
                    NOP
                    NI

NMI:                PSH_ALL, PSH_GO
                    I=1, F=1
                    NOP
                    INT_EN, E=1, I=1, F=1
                    NOP
                    NI

BUSERROR:           BUSERROR